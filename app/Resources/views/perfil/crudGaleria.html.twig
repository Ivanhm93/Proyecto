								<th>Id</th>
								<th>Imagen</th>
								<th>Dirección</th>
								<th>Acciones</th>
							</tr>
						</thead>
						<tbody>

							{% for pic in fotos %}

								<tr>
									<td class="linea">{{ pic.id }}</td>
									<td class="linea"><img width="100px" height="100px" style="max-width: 50%; max-height: 50%; margin-left: 25%;" src="../../../imagenes/{{ pic.imagen }}"></img></td>
									<td class="linea">{{ pic.apartamento }}</td>
									<td><a href="{{url("borrarGaleria",{"id":pic.id, "apar":apar.id})}}">Borrar</a></td>
								</tr>

							{% endfor %}

						</tbody>
				</table>
