            </li>
          </ul>
          </div>
        </div>
    </nav>		

    <!-- Formulario Perfil -->
      <div class="row" style="margin-top: 3.8%; margin-bottom: 1.3%;">
        <div class="col-lg-10">
            <h2 style="text-align: center;">Perfil de {{ app.user.nombre }} {{ app.user.apellidos }}</h2>
            {{ form_start(formulario,{attr:{ 
            style: 'border: 0.5px inset; padding: 5%; background-color: #BEBEBE;
            border-radius: 15px;'}}) }}
            {# {{ form_widget(formulario,{attr:{ 
            style: 'font-weight: bold;'
            }}) }} #}
            {{ form_row(formulario.username) }}
            {{ form_row(formulario.password,{value: app.user.password } )}}
            {{ form_row(formulario.email) }}
            {{ form_row(formulario.dni) }}
            {{ form_row(formulario.nombre) }}
            {{ form_row(formulario.apellidos) }}
            {{ form_row(formulario.telefono) }}
            {{ form_end(formulario) }}
        </div>
      </div>
    <!-- /Formulario Perfil -->

  </div>

</body>
{% endblock %}

