{% extends 'default/base.html.twig' %}

{% block cuerpo %}

<body style="background-color: #eee;">

   	<!-- Menú Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #00aced;">
        <div class="container">
            <img id="logo" src="../imagenes/logo.png">
            <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#divCollapse">
                &#9776;
            </button>
            <div class="collapse navbar-collapse" id="divCollapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a href="{{ url('homepage') }}" class="nav-link font-weight-bold fas fa-home"> Inicio</a></li>
                </ul>
                <ul class="nav navbar-nav flex-row justify-content-between ml-auto">
                    <li class="dropdown order-1">
                        <li class="nav-item"><a href="{{ url('registro') }}" class="nav-link font-weight-bold fas fa-sign-out-alt">Registrate</a></li>
                    </li>
                </ul>
            </div>
        </div>
    </nav>		
   	<!-- /Menú Navbar -->

   	<!-- Cuerpo Formulario -->
    <div class="col-lg-12" style="margin: 5% auto;">
        <div class="row">
            <div style="text-align: center; width: 100%">
                <h2>Formulario de Inicio de Sesión</h2>
            </div>
            <div class="form-control col-lg-4" style="margin-left: 34%; margin-top: 2%;">

                {{ form_start(formulario,{attr:{action:path("login_check_seguridad"), style: 'margin: 15%;'}}) }}
                {{ form_row(formulario.username,{'full_name':'_username'})}}
                {{ form_row(formulario.password,{'full_name':'_password'})}}
                {{ form_end(formulario) }}

                {% if error %}

                    <div style="text-align: center; color:red; margin-top: -10%;">{{ error.messageKey|trans(error.messageData,'security') }}</div>
                
                {% endif %}

            </div>
        </div>
    </div>
   	<!-- /Cuerpo Formulario -->

</body>
   
{% endblock %}

{% block javascript %}

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- /JavaScript -->

{% endblock %}